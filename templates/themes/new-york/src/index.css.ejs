@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 240 10% 3.9%;

    --card: 0 0% 100%;
    --card-foreground: 240 10% 3.9%;

    --popover: 0 0% 100%;
    --popover-foreground: 240 10% 3.9%;

    --primary: <%= accentColor === 'blue' ? '240 5.9% 10%' :
                 accentColor === 'green' ? '142.1 76.2% 36.3%' :
                 accentColor === 'purple' ? '262.1 83.3% 57.8%' :
                 accentColor === 'red' ? '0 72.2% 50.6%' :
                 accentColor === 'orange' ? '20.5 90.2% 48.2%' :
                 accentColor === 'yellow' ? '47.9 95.8% 53.1%' :
                 accentColor === 'pink' ? '330.4 81.2% 60.4%' :
                 '240 5.9% 10%' %>;
    --primary-foreground: 0 0% 98%;

    --secondary: 240 4.8% 95.9%;
    --secondary-foreground: 240 5.9% 10%;

    --muted: 240 4.8% 95.9%;
    --muted-foreground: 240 3.8% 46.1%;

    --accent: 240 4.8% 95.9%;
    --accent-foreground: 240 5.9% 10%;

    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 0 0% 98%;

    --border: 240 5.9% 90%;
    --input: 240 5.9% 90%;
    --ring: <%= accentColor === 'blue' ? '240 5.9% 10%' :
              accentColor === 'green' ? '142.1 76.2% 36.3%' :
              accentColor === 'purple' ? '262.1 83.3% 57.8%' :
              accentColor === 'red' ? '0 72.2% 50.6%' :
              accentColor === 'orange' ? '20.5 90.2% 48.2%' :
              accentColor === 'yellow' ? '47.9 95.8% 53.1%' :
              accentColor === 'pink' ? '330.4 81.2% 60.4%' :
              '240 5.9% 10%' %>;

    --radius: <%= borderRadius %>rem;
  }

  .dark {
    --background: 240 10% 3.9%;
    --foreground: 0 0% 98%;

    --card: 240 10% 3.9%;
    --card-foreground: 0 0% 98%;

    --popover: 240 10% 3.9%;
    --popover-foreground: 0 0% 98%;

    --primary: <%= accentColor === 'blue' ? '0 0% 98%' :
                 accentColor === 'green' ? '142.1 70.6% 45.3%' :
                 accentColor === 'purple' ? '263.4 70% 50.4%' :
                 accentColor === 'red' ? '0 72.2% 50.6%' :
                 accentColor === 'orange' ? '20.5 90.2% 48.2%' :
                 accentColor === 'yellow' ? '47.9 95.8% 53.1%' :
                 accentColor === 'pink' ? '330.4 81.2% 60.4%' :
                 '0 0% 98%' %>;
    --primary-foreground: 240 5.9% 10%;

    --secondary: 240 3.7% 15.9%;
    --secondary-foreground: 0 0% 98%;

    --muted: 240 3.7% 15.9%;
    --muted-foreground: 240 5% 64.9%;

    --accent: 240 3.7% 15.9%;
    --accent-foreground: 0 0% 98%;

    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 0 0% 98%;

    --border: 240 3.7% 15.9%;
    --input: 240 3.7% 15.9%;
    --ring: <%= accentColor === 'blue' ? '240 4.9% 83.9%' :
              accentColor === 'green' ? '142.1 70.6% 45.3%' :
              accentColor === 'purple' ? '263.4 70% 50.4%' :
              accentColor === 'red' ? '0 72.2% 50.6%' :
              accentColor === 'orange' ? '20.5 90.2% 48.2%' :
              accentColor === 'yellow' ? '47.9 95.8% 53.1%' :
              accentColor === 'pink' ? '330.4 81.2% 60.4%' :
              '240 4.9% 83.9%' %>;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
    <% if (font === 'inter') { %>font-family: 'Inter', sans-serif;<% } else if (font === 'geist') { %>font-family: 'Geist', sans-serif;<% } else if (font === 'mono') { %>font-family: 'JetBrains Mono', 'Fira Code', monospace;<% } %>
  }
}

/* New York theme specific styles */
@layer components {
  .btn-primary {
    @apply bg-primary text-primary-foreground shadow hover:bg-primary/90 px-8 py-2 rounded-none font-medium transition-colors border-0;
  }

  .btn-secondary {
    @apply bg-transparent text-foreground shadow-none border border-input hover:bg-accent hover:text-accent-foreground px-8 py-2 rounded-none font-medium transition-colors;
  }

  .card {
    @apply bg-card text-card-foreground border shadow-none rounded-none;
  }

  /* New York style has sharper, more minimal design */
  .rounded-md {
    @apply rounded-none;
  }

  .rounded-lg {
    @apply rounded-none;
  }
}