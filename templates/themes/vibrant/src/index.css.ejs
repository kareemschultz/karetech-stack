@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 222.2 84% 4.9%;

    --card: 0 0% 100%;
    --card-foreground: 222.2 84% 4.9%;

    --popover: 0 0% 100%;
    --popover-foreground: 222.2 84% 4.9%;

    --primary: <%= accentColor === 'blue' ? '217.2 91.2% 59.8%' :
                 accentColor === 'green' ? '142.1 76.2% 36.3%' :
                 accentColor === 'purple' ? '262.1 83.3% 57.8%' :
                 accentColor === 'red' ? '346.8 77.2% 49.8%' :
                 accentColor === 'orange' ? '24.6 95% 53.1%' :
                 accentColor === 'yellow' ? '47.9 95.8% 53.1%' :
                 accentColor === 'pink' ? '330.4 81.2% 60.4%' :
                 '217.2 91.2% 59.8%' %>;
    --primary-foreground: 210 40% 98%;

    --secondary: <%= accentColor === 'blue' ? '214.3 31.8% 91.4%' :
                   accentColor === 'green' ? '138.5 76.5% 96.7%' :
                   accentColor === 'purple' ? '270 100% 98%' :
                   accentColor === 'red' ? '352.7 100% 97.1%' :
                   accentColor === 'orange' ? '33 100% 96.5%' :
                   accentColor === 'yellow' ? '54.5 91.7% 95.3%' :
                   accentColor === 'pink' ? '327.4 73.3% 97.1%' :
                   '214.3 31.8% 91.4%' %>;
    --secondary-foreground: 222.2 84% 4.9%;

    --muted: 210 40% 94%;
    --muted-foreground: 215.4 16.3% 46.9%;

    --accent: <%= accentColor === 'blue' ? '214.3 31.8% 91.4%' :
                accentColor === 'green' ? '138.5 76.5% 96.7%' :
                accentColor === 'purple' ? '270 100% 98%' :
                accentColor === 'red' ? '352.7 100% 97.1%' :
                accentColor === 'orange' ? '33 100% 96.5%' :
                accentColor === 'yellow' ? '54.5 91.7% 95.3%' :
                accentColor === 'pink' ? '327.4 73.3% 97.1%' :
                '214.3 31.8% 91.4%' %>;
    --accent-foreground: 222.2 84% 4.9%;

    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;

    --border: 214.3 31.8% 91.4%;
    --input: 214.3 31.8% 91.4%;
    --ring: <%= accentColor === 'blue' ? '217.2 91.2% 59.8%' :
              accentColor === 'green' ? '142.1 76.2% 36.3%' :
              accentColor === 'purple' ? '262.1 83.3% 57.8%' :
              accentColor === 'red' ? '346.8 77.2% 49.8%' :
              accentColor === 'orange' ? '24.6 95% 53.1%' :
              accentColor === 'yellow' ? '47.9 95.8% 53.1%' :
              accentColor === 'pink' ? '330.4 81.2% 60.4%' :
              '217.2 91.2% 59.8%' %>;

    --radius: <%= borderRadius %>rem;
  }

  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;

    --card: 222.2 84% 4.9%;
    --card-foreground: 210 40% 98%;

    --popover: 222.2 84% 4.9%;
    --popover-foreground: 210 40% 98%;

    --primary: <%= accentColor === 'blue' ? '217.2 91.2% 59.8%' :
                 accentColor === 'green' ? '142.1 70.6% 45.3%' :
                 accentColor === 'purple' ? '263.4 70% 50.4%' :
                 accentColor === 'red' ? '346.8 77.2% 49.8%' :
                 accentColor === 'orange' ? '20.5 90.2% 48.2%' :
                 accentColor === 'yellow' ? '47.9 95.8% 53.1%' :
                 accentColor === 'pink' ? '330.4 81.2% 60.4%' :
                 '217.2 91.2% 59.8%' %>;
    --primary-foreground: 222.2 84% 4.9%;

    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;

    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;

    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;

    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;

    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: <%= accentColor === 'blue' ? '224.3 76.3% 48%' :
              accentColor === 'green' ? '142.1 70.6% 45.3%' :
              accentColor === 'purple' ? '263.4 70% 50.4%' :
              accentColor === 'red' ? '346.8 77.2% 49.8%' :
              accentColor === 'orange' ? '20.5 90.2% 48.2%' :
              accentColor === 'yellow' ? '47.9 95.8% 53.1%' :
              accentColor === 'pink' ? '330.4 81.2% 60.4%' :
              '224.3 76.3% 48%' %>;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
    <% if (font === 'inter') { %>font-family: 'Inter', sans-serif;<% } else if (font === 'geist') { %>font-family: 'Geist', sans-serif;<% } else if (font === 'mono') { %>font-family: 'JetBrains Mono', 'Fira Code', monospace;<% } %>
  }
}

/* Vibrant theme specific styles */
@layer components {
  .btn-primary {
    @apply bg-primary text-primary-foreground hover:bg-primary/90 px-6 py-3 rounded-xl font-semibold transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 border-0;
  }

  .btn-secondary {
    @apply bg-secondary text-secondary-foreground hover:bg-secondary/80 px-6 py-3 rounded-xl font-semibold transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 border-0;
  }

  .card {
    @apply bg-card text-card-foreground rounded-2xl border shadow-xl hover:shadow-2xl transition-all duration-300;
  }

  /* Enhanced visual effects for vibrant theme */
  .hover\:scale-105:hover {
    @apply scale-105;
  }

  .gradient-bg {
    background: linear-gradient(135deg,
      hsl(var(--primary) / 0.1) 0%,
      hsl(var(--secondary) / 0.1) 100%);
  }
}

/* Custom gradients and animations */
@layer utilities {
  .vibrant-gradient {
    background: linear-gradient(135deg,
      <%= accentColor === 'blue' ? '#3b82f6, #1d4ed8' :
          accentColor === 'green' ? '#10b981, #047857' :
          accentColor === 'purple' ? '#a855f7, #7c3aed' :
          accentColor === 'red' ? '#ef4444, #dc2626' :
          accentColor === 'orange' ? '#f97316, #ea580c' :
          accentColor === 'yellow' ? '#eab308, #ca8a04' :
          accentColor === 'pink' ? '#ec4899, #db2777' :
          '#3b82f6, #1d4ed8' %>);
  }

  .pulse-slow {
    animation: pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
}