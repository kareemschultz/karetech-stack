version: 2
updates:
  # Enable version updates for npm
  - package-ecosystem: "npm"
    directory: "/"
    schedule:
      interval: "weekly"
      day: "monday"
      time: "09:00"
    open-pull-requests-limit: 10
    reviewers:
      - "<%= author.toLowerCase().replace(/\s+/g, '') %>"
    assignees:
      - "<%= author.toLowerCase().replace(/\s+/g, '') %>"
    commit-message:
      prefix: "chore(deps)"
      include: "scope"
    labels:
      - "dependencies"
      - "automated"

  # Enable version updates for Docker
  - package-ecosystem: "docker"
    directory: "/"
    schedule:
      interval: "weekly"
      day: "monday"
      time: "09:00"
    open-pull-requests-limit: 5
    reviewers:
      - "<%= author.toLowerCase().replace(/\s+/g, '') %>"
    commit-message:
      prefix: "chore(docker)"
    labels:
      - "docker"
      - "dependencies"
      - "automated"

  # Enable version updates for GitHub Actions
  - package-ecosystem: "github-actions"
    directory: "/"
    schedule:
      interval: "weekly"
      day: "monday"
      time: "09:00"
    open-pull-requests-limit: 5
    reviewers:
      - "<%= author.toLowerCase().replace(/\s+/g, '') %>"
    commit-message:
      prefix: "chore(actions)"
    labels:
      - "github-actions"
      - "dependencies"
      - "automated"