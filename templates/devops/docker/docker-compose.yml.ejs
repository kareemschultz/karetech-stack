version: '3.8'

services:
  # Main application
  app:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=production
      - PORT=3000
      <% if (database === 'postgresql') { %>- DATABASE_URL=postgresql://postgres:password@postgres:5432/<%= projectName.toLowerCase().replace(/[^a-z0-9]/g, '_') %><% } %>
      <% if (database === 'sqlite') { %>- DATABASE_URL=/app/data/local.db<% } %>
      <% if (auth.length > 0) { %>- BETTER_AUTH_SECRET=${BETTER_AUTH_SECRET}
      - BETTER_AUTH_URL=http://localhost:3000<% } %>
      <% if (auth.includes('github')) { %>- GITHUB_CLIENT_ID=${GITHUB_CLIENT_ID}
      - GITHUB_CLIENT_SECRET=${GITHUB_CLIENT_SECRET}<% } %>
      <% if (auth.includes('google')) { %>- GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
      - GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}<% } %>
    volumes:
      <% if (database === 'sqlite') { %>- app-data:/app/data<% } %>
      - ./logs:/app/logs
    depends_on:
      <% if (database === 'postgresql') { %>- postgres<% } %>
      <% if (analytics === 'posthog') { %>- redis<% } %>
    restart: unless-stopped
    networks:
      - app-network

  <% if (database === 'postgresql') { %># PostgreSQL database
  postgres:
    image: postgres:16-alpine
    environment:
      - POSTGRES_DB=<%= projectName.toLowerCase().replace(/[^a-z0-9]/g, '_') %>
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=password
    volumes:
      - postgres-data:/var/lib/postgresql/data
      - ./init.sql:/docker-entrypoint-initdb.d/init.sql
    ports:
      - "5432:5432"
    restart: unless-stopped
    networks:
      - app-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5

  <% } %><% if (analytics === 'posthog') { %># Redis for caching and sessions
  redis:
    image: redis:7-alpine
    command: redis-server --appendonly yes
    volumes:
      - redis-data:/data
    ports:
      - "6379:6379"
    restart: unless-stopped
    networks:
      - app-network
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

  <% } %># Nginx reverse proxy (optional)
  nginx:
    image: nginx:alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./ssl:/etc/nginx/ssl:ro
    depends_on:
      - app
    restart: unless-stopped
    networks:
      - app-network

volumes:
  <% if (database === 'postgresql') { %>postgres-data:<% } %>
  <% if (database === 'sqlite') { %>app-data:<% } %>
  <% if (analytics === 'posthog') { %>redis-data:<% } %>

networks:
  app-network:
    driver: bridge