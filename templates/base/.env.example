# <%= projectName %> Environment Variables
# Copy this file to .env and fill in your values

<% if (database === 'postgresql') { %># PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/<%= projectName.toLowerCase().replace(/[^a-z0-9]/g, '_') %>

<% } %><% if (database === 'turso') { %># Turso Database (LibSQL)
DATABASE_URL=libsql://your-database-url.turso.io
DATABASE_AUTH_TOKEN=your-auth-token

<% } %><% if (database === 'sqlite') { %># SQLite Database
DATABASE_URL=./local.db

<% } %><% if (auth.length > 0) { %># Authentication (Better Auth)
BETTER_AUTH_SECRET=your-very-secure-secret-key-here
BETTER_AUTH_URL=http://localhost:5173

<% if (auth.includes('github')) { %># GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

<% } %><% if (auth.includes('google')) { %># Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

<% } %><% if (auth.includes('discord')) { %># Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

<% } %><% if (auth.includes('microsoft')) { %># Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

<% } %><% if (auth.includes('email')) { %># Email Configuration (for email auth)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

<% } %><% } %><% if (analytics === 'google') { %># Google Analytics
VITE_GA_ID=G-XXXXXXXXXX

<% } %><% if (analytics === 'posthog') { %># PostHog Analytics
VITE_POSTHOG_KEY=your-posthog-key
VITE_POSTHOG_HOST=https://app.posthog.com

<% } %><% if (errorTracking === 'sentry') { %># Sentry Error Tracking
VITE_SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

<% } %><% if (errorTracking === 'bugsnag') { %># Bugsnag Error Tracking
VITE_BUGSNAG_API_KEY=your-bugsnag-api-key

<% } %><% if (pwa) { %># PWA Configuration
VITE_APP_NAME=<%= projectName %>
VITE_APP_SHORT_NAME=<%= projectName.substring(0, 12) %>

<% } %><% if (mcpServers && mcpServers.length > 0) { %># ─────────────────────────────────────────────────────────────
# MCP Server Configuration
# ─────────────────────────────────────────────────────────────
<% if (mcpServers.includes('github')) { %>
# GitHub MCP Server
# Generate token at: https://github.com/settings/tokens
# Required scopes: repo, read:org, read:project
GITHUB_TOKEN=your-github-personal-access-token
<% } %>
<% if (mcpServers.includes('filesystem')) { %>
# Filesystem MCP Server
# Project root is used by default, customize if needed
MCP_FILESYSTEM_ROOT=./
<% } %>
<% if (mcpServers.includes('playwright')) { %>
# Playwright MCP Server
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true
<% } %>
<% } %># ─────────────────────────────────────────────────────────────
# Development
# ─────────────────────────────────────────────────────────────
NODE_ENV=development
VITE_API_URL=http://localhost:5173

# ─────────────────────────────────────────────────────────────
# Production (uncomment when deploying)
# ─────────────────────────────────────────────────────────────
# NODE_ENV=production
# VITE_API_URL=https://your-production-domain.com