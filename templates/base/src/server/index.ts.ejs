import { Hono } from 'hono'
import { cors } from 'hono/cors'
import { logger } from 'hono/logger'
import { prettyJSON } from 'hono/pretty-json'
import { serve } from '@hono/node-server'
import { serveStatic } from '@hono/node-server/serve-static'

<% if (apiStyle === 'orpc') { %>import { orpcHandler } from '@orpc/server/hono'
import { router } from './router'<% } %>
<% if (apiStyle === 'trpc') { %>import { trpcServer } from '@trpc/server/adapters/hono'
import { appRouter } from './trpc/router'<% } %>
<% if (database !== 'none') { %>import { db } from './db'<% } %>

const app = new Hono()

// Middleware
app.use('*', logger())
app.use('*', prettyJSON())
app.use('*', cors({
  origin: ['http://localhost:5173', 'http://localhost:3000'],
  credentials: true,
}))

// API Routes
<% if (apiStyle === 'orpc') { %>app.route('/api', orpcHandler({
  router,
  context: async () => ({
    <% if (database !== 'none') { %>db,<% } %>
    // Add other context here
  }),
}))<% } %>

<% if (apiStyle === 'trpc') { %>app.use('/trpc/*', trpcServer({
  router: appRouter,
  createContext: () => ({
    <% if (database !== 'none') { %>db,<% } %>
    // Add other context here
  }),
}))<% } %>

<% if (apiStyle === 'rest' || apiStyle === 'none') { %>// Basic REST API routes
app.get('/api/health', (c) => {
  return c.json({
    status: 'ok',
    timestamp: new Date().toISOString(),
    <% if (database !== 'none') { %>database: 'connected',<% } %>
  })
})

app.get('/api/hello', (c) => {
  const name = c.req.query('name') || 'World'
  return c.json({
    message: `Hello, ${name}!`,
    project: '<%= projectName %>',
  })
})<% } %>

// Serve static files in production
if (process.env.NODE_ENV === 'production') {
  app.use('*', serveStatic({
    root: './dist',
    index: 'index.html',
  }))

  // Catch all for SPA routing
  app.get('*', serveStatic({
    path: './dist/index.html',
  }))
}

const port = Number(process.env.PORT) || 3000

console.log(`ðŸš€ Server starting on port ${port}`)

serve({
  fetch: app.fetch,
  port,
})

export type App = typeof app