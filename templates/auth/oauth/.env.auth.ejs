# OAuth Authentication Configuration
# Generated by create-karetech-stack

# OAuth providers (configure as needed)
<% if (auth.includes('google')) { %>
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
<% } %>

<% if (auth.includes('discord')) { %>
# Discord OAuth
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
<% } %>

<% if (auth.includes('microsoft')) { %>
# Microsoft OAuth
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
<% } %>

# Better Auth configuration
BETTER_AUTH_SECRET=<%= authSecret %>
BETTER_AUTH_BASE_URL=http://localhost:<%= devPort || 5173 %>

# Database connection
<% if (database === 'postgresql') { %>
DATABASE_URL=postgresql://postgres:password@localhost:5432/<%= projectName %>
<% } else if (database === 'turso') { %>
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token
<% } else if (database === 'sqlite') { %>
DATABASE_URL=sqlite:./sqlite.db
<% } %>