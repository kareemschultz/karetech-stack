    },
    <% } %>

    <% if (auth.includes('microsoft')) { %>
    microsoft: {
      clientId: process.env.MICROSOFT_CLIENT_ID!,
      clientSecret: process.env.MICROSOFT_CLIENT_SECRET!,
      scope: ["openid", "profile", "email"],
      tenantId: "common", // Use 'common' for multi-tenant, specific tenant ID for single tenant
