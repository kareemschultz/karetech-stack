{
  "name": "create-karetech-stack",
  "version": "0.0.1",
  "description": "Enhanced Better-T-Stack scaffold with PBS, testing, and DevOps built-in",
  "type": "module",
  "bin": {
    "create-karetech-stack": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "dev": "bun run src/index.ts",
    "dev:watch": "bun --watch run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "build:check": "bun run build && bun run typecheck",
    "test": "bun test",
    "test:unit": "bun test src/",
    "test:mcp": "bun test src/mcp/",
    "test:generators": "bun test src/generators/",
    "test:presets": "bun test src/presets/",
    "test:e2e": "bun run tests/run-e2e.ts",
    "test:e2e:quick": "bun run tests/run-e2e.ts --quick",
    "test:e2e:verbose": "bun run tests/run-e2e.ts --verbose",
    "test:all": "bun run test && bun run test:e2e",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "bun run typecheck && bun run lint && bun run test:all",
    "validate:quick": "bun run typecheck && bun run lint && bun run test:unit",
    "validate:ci": "bun run format:check && bun run typecheck && bun run lint && bun run test:all",
    "env:check": "bun run scripts/check-environment.ts",
    "env:setup": "bun run scripts/setup-dev-environment.ts",
    "mcp:validate": "bun run scripts/validate-mcp-config.ts",
    "mcp:test": "bun run scripts/test-mcp-servers.ts",
    "clean": "rm -rf dist .tsbuildinfo coverage",
    "clean:all": "rm -rf dist .tsbuildinfo coverage node_modules .bun",
    "prepublishOnly": "bun run build && bun run validate"
  },
  "keywords": [
    "scaffold",
    "better-t-stack",
    "typescript",
    "bun",
    "hono",
    "drizzle",
    "tanstack",
    "shadcn",
    "cli",
    "generator"
  ],
  "author": {
    "name": "Kareem Schultz",
    "email": "kareem@karetech.gy",
    "url": "https://github.com/kareemschultz"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kareemschultz/karetech-stack.git"
  },
  "bugs": {
    "url": "https://github.com/kareemschultz/karetech-stack/issues"
  },
  "homepage": "https://github.com/kareemschultz/karetech-stack#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "commander": "^12.1.0",
    "ejs": "^3.1.10",
    "fs-extra": "^11.2.0",
    "picocolors": "^1.1.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ]
}
